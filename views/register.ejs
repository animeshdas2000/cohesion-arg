<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Register for ARG</title>
  <link rel="stylesheet" href="/stylesheets/style.css" />
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="scripts/register.js"></script>
</head>

<body>
  <main>
    <div class="container">
      <h1 class="section-header">Register</h1>
      <div class="reg-box">
        <form>
          <input class="auth-input" type="text" placeholder="Name" id="name" minlength="4" required />
          <div></div>
          <input class="auth-input" type="text" placeholder="Institution Name" id="instname" minlength="6" required />
          <div></div>
          <input class="auth-input" type="number" placeholder="Contact No." id="contact" required />
          <div id="contact_error"></div>
          <input class="auth-input" type="email" placeholder="Email" id="email" required />
          <div id="email_error"></div>
          <input class="auth-input" type="date" placeholder="DoB" id="dob" required />
          <input class="auth-input" type="password" placeholder="Password" id="password" minlength="8" maxlength="15" required />
          <div id="password_error"></div>
          <button class="auth-btn" id="register" type="submit">Register</button>
        </form>
        <div id="msg"></div>
      </div>
    </div>
  </main>
</body>

</html>